{
  "name": "monorepo-ci-tools",
  "version": "0.0.1",
  "description": "A tool for managing JavaScript projects with multiple packages based on Bolt.",
  "main": "index.js",
  "repository": "git@github.com:tundraray/monorepo-ci-tools.git",
  "author": "Mikhail Andreev <tundraray@outlook.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --config=jest.config.js",
    "lint": "eslint --ext .js --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "compile": "gulp --cwd . compile",
    "build": "npm run clean && npm run compile",
    "deploy": "cd .publish && npm publish",
    "check": "npm run lint && npm run test",
    "clean": "rimraf dist lib .publish",
    "re-install": "npm run clean && rd /s/q node_modules && yarn"
  },
  "private": true,
  "dependencies": {
    "@xcritical/eslint-plugin-xc-front-lint": "latest",
    "@xcritical/xc-front-libs-utils": "latest",
    "bolt": "^0.23.6",
    "execa": "^2.0.4"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "jest-teamcity-reporter": "^0.9.0",
    "ts-jest": "^24.0.2"
  },
  "bolt": {
    "workspaces": [
      "testWorkspace/*"
    ]
  }
}